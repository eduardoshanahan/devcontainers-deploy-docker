# Log rotation for reporting system
/var/log/reporting/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 root root
    postrotate
        # Restart any reporting services if needed
        systemctl reload reporting 2>/dev/null || true
    endscript
}

# Rotate report generation logs
/opt/reports/*.log {
    weekly
    missingok
    rotate 12
    compress
    delaycompress
    notifempty
    create 644 root root
}
